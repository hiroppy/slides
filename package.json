    "bespoke-scale": "^1.0.1",
    "bespoke-theme-nebula": "^1.0.1",
    "bespoke-touch": "^1.0.0",
    "font-awesome": "^4.7.0",
    "highlight.js": "^9.10.0",
    "offline-plugin": "^4.8.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
