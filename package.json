{
  "name": "slides",
  "version": "1.0.0",
  "description": "My slides using bespoke",
  "main": "",
  "scripts": {
    "start": "npm run start:javascript-specification",
    "start:hello": "webpack-dev-server --env.name hello",
    "start:node-whatwg-url": "webpack-dev-server --env.name node-whatwg-url",
    "start:node8": "webpack-dev-server --env.name node8",
    "start:nicohaco": "webpack-dev-server --env.name nicohaco",
    "start:javascript-specification": "webpack-dev-server --env.name 'the present and future of JavaScript'",
    "build": "npm run clean && NODE_ENV=production webpack",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src",
    "lint:css": "stylelint src/**/*.css",
    "deploy": "npm run build && gh-pages -d dist",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abouthiroppy/slides.git"
  },
  "author": "abouthiroppy <git@about-hiroppy.com> (http://about-hiroppy.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abouthiroppy/slides/issues"
  },
  "homepage": "https://github.com/abouthiroppy/slides#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.23.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "eslint-config-sky": "^1.4.3",
    "file-loader": "^1.1.5",
    "gh-pages": "^1.0.0",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "markdown-loader": "^2.0.1",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.8",
    "postcss-mixins": "^6.1.1",
    "postcss-reporter": "^5.0.0",
    "postcss-smart-import": "^0.7.5",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-sky": "^1.0.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "bespoke": "^1.1.0",
    "bespoke-backdrop": "^1.0.0",
    "bespoke-convenient": "^1.0.0",
    "bespoke-fullscreen": "^1.0.0",
    "bespoke-hash": "^1.0.2",
    "bespoke-jumpy": "^1.0.1",
    "bespoke-keys": "^1.1.0",
